<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="egit.Views.View_CommitInfo">
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
      <TextBlock Width="100" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitInfo}"></TextBlock>
      <TextBlock Width="100" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitNumFiles}"></TextBlock>
      <TextBlock Width="100" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitParents}"></TextBlock>
    </StackPanel>
    <TextBlock DataContext="{Binding GitRepoEngine}" Text="{Binding CommitMessage}"></TextBlock>
  </DockPanel>
</UserControl>
