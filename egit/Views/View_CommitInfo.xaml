<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="egit.Views.View_CommitInfo">
  <DockPanel>
    <Grid DockPanel.Dock="Top" ColumnDefinitions="3*,3*,3*" HorizontalAlignment="Stretch">
      <TextBlock Grid.Column="0" HorizontalAlignment="Stretch" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitInfo}"></TextBlock>
      <TextBlock Grid.Column="1" HorizontalAlignment="Stretch" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitNumFiles}"></TextBlock>
      <TextBlock Grid.Column="2" HorizontalAlignment="Stretch" DataContext="{Binding GitRepoEngine}" Text="{Binding CommitParents}"></TextBlock>
    </Grid>
    <TextBlock DataContext="{Binding GitRepoEngine}" Text="{Binding CommitMessage}"></TextBlock>
  </DockPanel>
</UserControl>
